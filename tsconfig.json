{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ngx-dynamic-components/core": [
        "dist/@ngx-dynamic-components/core",
      ],
      "@ngx-dynamic-components/core/*": [
        "dist/@ngx-dynamic-components/core/*"
      ],
      "@ngx-dynamic-components/bootstrap": [
        "dist/@ngx-dynamic-components/bootstrap",
      ],
      "@ngx-dynamic-components/bootstrap/*": [
        "dist/@ngx-dynamic-components/bootstrap/*"
      ],
      "@ngx-dynamic-components/tools": [
        "dist/@ngx-dynamic-components/tools",
      ],
      "@ngx-dynamic-components/tools/*": [
        "dist/@ngx-dynamic-components/tools/*"
      ],
      "core": [
        "dist/@ngx-dynamic-components/core"
      ],
      "core/*": [
        "dist/core/*"
      ],
      "tools": [
        "dist/@ngx-dynamic-components/tools"
      ],
      "tools/*": [
        "dist/tools/*"
      ],
      "bootstrap": [
        "dist/@ngx-dynamic-components/bootstrap"
      ],
      "bootstrap/*": [
        "dist/bootstrap/*"
      ],
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ]
    }
  }
}
